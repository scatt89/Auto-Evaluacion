<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ejemplos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="ldm.clases.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ldm.clases.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ldm.clases.Temas"
            android:label="@string/title_activity_temas" >
        </activity>
        <activity
            android:name="ldm.clases.Puntuacion"
            android:label="@string/title_activity_puntuacion" >
        </activity>
        <activity
            android:name="ldm.clases.MisDatos"
            android:label="@string/title_activity_usuario" >
        </activity>
        <activity
            android:name="ldm.clases.Ajustes"
            android:label="@string/title_activity_ajustes" >
        </activity>
        <activity
            android:name="ldm.clases.Pregunta"
            android:label="@string/title_activity_pregunta" >
        </activity>
        <activity
            android:name="ldm.clases.Ranking"
            android:label="@string/title_activity_ranking" >
        </activity>
        <activity
            android:name="ldm.clases.Registro"
            android:label="@string/title_activity_registro" >
        </activity>

    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
