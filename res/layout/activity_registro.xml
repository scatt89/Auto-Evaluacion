<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/page_wallpaper" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ldm.clases.MisDatos" >

        <TextView
            android:id="@+id/nombreUsuarioTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nombre_usuario" />

        <EditText
            android:id="@+id/introUserEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreUsuarioTextView"
            android:hint="@string/Hint_name"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introUserEditText"
            android:text="@string/Email" />

        <EditText
            android:id="@+id/introEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailTextView"
            android:hint="@string/Hint_email"
            android:inputType="textEmailAddress" >
        </EditText>

        <TextView
            android:id="@+id/passTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introEmailEditText"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/introPassEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passTextView"
            android:inputType="textPassword" >
        </EditText>

        <TextView
            android:id="@+id/confirmPassTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introPassEditText"
            android:text="Confirmar contraseña" />

        <EditText
            android:id="@+id/confirmIntroPassEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmPassTextView"
            android:inputType="textPassword" >
        </EditText>

        <Button
            android:id="@+id/aceptarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmIntroPassEditText"
            android:layout_marginTop="18dp"
            android:text="Aceptar" />
    </RelativeLayout>

</ScrollView>