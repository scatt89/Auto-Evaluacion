<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/page_wallpaper" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ldm.clases.Ajustes" >

        <CheckBox
            android:id="@+id/activar_sonidoCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/Activar_sonido"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/activar_tiempocheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activar_sonidoCheckBox"
            android:layout_centerHorizontal="true"
            android:text="@string/Activar_tiempo"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/activar_passCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activar_tiempocheckBox"
            android:layout_centerHorizontal="true"
            android:text="Recordar contraseÃ±a"
            android:textSize="30sp" />
    </RelativeLayout>

</ScrollView>