<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/page_wallpaper" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ldm.clases.Puntuacion" >

        <TextView
            android:id="@+id/tu_nota_actual_es_deTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Puntuaciones actuales"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/linefirstView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tu_nota_actual_es_deTextView"
            android:layout_centerHorizontal="true"
            android:contentDescription="line"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/todoPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linefirstView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Todo "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/apisPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todoPts"
            android:layout_centerHorizontal="true"
            android:text="Uso de Apis "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lifeCyclePts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apisPts"
            android:layout_centerHorizontal="true"
            android:text="Ciclo de vida "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/inputsPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lifeCyclePts"
            android:layout_centerHorizontal="true"
            android:text="Inputs "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tecladoPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputsPts"
            android:layout_centerHorizontal="true"
            android:text="Eventos de teclado "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/archivosPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tecladoPts"
            android:layout_centerHorizontal="true"
            android:text="Manejo de archivos "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/viewPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/archivosPts"
            android:layout_centerHorizontal="true"
            android:text="Views "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listsPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPts"
            android:layout_centerHorizontal="true"
            android:text="PickerVIews y ListViews "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/imagenesPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listsPts"
            android:layout_centerHorizontal="true"
            android:text="Imágenes y Menús "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/datosPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagenesPts"
            android:layout_centerHorizontal="true"
            android:text="Persistencia de datos "
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/lineView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datosPts"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:contentDescription="line"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/ConsejoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineView"
            android:layout_centerHorizontal="true"
            android:text="Deberías esforzarte más en "
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/lineView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConsejoTextView"
            android:layout_centerHorizontal="true"
            android:contentDescription="line"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/notaMediaView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Tu nota media es "
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/lineView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notaMediaView"
            android:layout_centerHorizontal="true"
            android:contentDescription="line"
            android:src="@drawable/line" />
    </RelativeLayout>

</ScrollView>