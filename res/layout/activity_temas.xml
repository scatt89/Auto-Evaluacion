<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical" 
    android:background="@drawable/page_wallpaper">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/todoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/todo_b"
            android:onClick="lauchTodo" />

        <Button
            android:id="@+id/uso_de_apisButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/todoButton"
            android:background="@drawable/uso_de_apis_b" 
            android:onClick="lauchApis"/>

        <Button
            android:id="@+id/ciclo_de_vidaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/uso_de_apisButton"
           	android:background="@drawable/ciclo_de_vida_b" 
           	android:onClick="lauchLifeCycle"/>

        <Button
            android:id="@+id/inputsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/ciclo_de_vidaButton"
            android:background="@drawable/inputs_b"
            android:onClick="lauchInputs" />

        <Button
            android:id="@+id/eventos_de_tecladoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/inputsButton"
            android:background="@drawable/eventos_de_teclado_b" 
            android:onClick="lauchKeyboardEvents"/>

        <Button
            android:id="@+id/manejo_de_archivosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/eventos_de_tecladoButton"
            android:background="@drawable/manejo_de_archivos_b" 
            android:onClick="lauchFiles"/>

        <Button
            android:id="@+id/viewsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/manejo_de_archivosButton"
            android:background="@drawable/views_b" 
            android:onClick="lauchViews"/>

        <Button
            android:id="@+id/pickerviews_y_listviewsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/viewsButton"
            android:background="@drawable/pickerviews_y_listviews_b" 
            android:onClick="lauchListViews"/>

        <Button
            android:id="@+id/imagenes_y_menusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/pickerviews_y_listviewsButton"
            android:background="@drawable/imagenes_y_menus_b" 
            android:onClick="lauchImages"/>

        <Button
            android:id="@+id/persistencia_de_datosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imagenes_y_menusButton"
            android:background="@drawable/persistencia_de_datos_b" 
            android:onClick="lauchDatas"/>
    </RelativeLayout>

</ScrollView>